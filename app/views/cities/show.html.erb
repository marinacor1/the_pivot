<h1>Basements in <%= @city.name %></h1>

<div class="city-show-page-css">
  <h3><%= @city.name_and_state %></h3>
  <ul>
    <% @city.homes.each do |home| %>
      <li><%= link_to home.title, city_home_path(@city.slug, home.id) %></li>
      <li><%= home.description %></li>
    <% end %>
  </ul>
</div>
