<div class="container">
  <div class="page-header">
    <h1><%= @home.title %><small> in <%= @city.name_and_state %></small></h1>
  </div>
  <div class="row home">

    <div class="col-sm-12 col-md-6">
      <img src="<%= @home.image_url %>" class="img-responsive" alt="image of <%= @home.title %>">
    </div>

    <div class="home-description">
    <div class="col-sm-23 col-md-6">
      <h3>Enjoy this space for just $<%= @home.daily_rate %> per night</h3>
      <p><%= @home.description %></p>
      <br>

      <form class="date-picker-box">
        <input type="text" id="home-date-range" class="form-control", value>
        <button class="btn btn-success" id="reserve-days">Request Dates</button>
      </form>
      <br>
      <% if @home.reviews.count > 0 %>
        <h4>Check out reviews for the home here. <%= link_to "Reviews", reviews_path(@home, @reviews) %></h4>
      <% end %>
    </div>
  </div>
  </div>
</div>
